

  <div class="container user-profile-bg">

  <div class="user-profile-card p-2 my-4">

  <div class="user-profile-head d-flex">

    <h1> <i class="fa-solid fa-circle-user"></i> <%= current_user.username %></h1>  <%= button_to "Logout", destroy_user_session_path, class: "btn btn-outline-light btn-sm", method: :delete %>
  </div>


<div class="current-banner">
  <div class="reused-banner-inner p-2 user-profile-head">
    <h1>My Favourite Jobs  💼  </h1>
    <hr>
    <% if @favourites.empty? %>
      <h3>You have no favourites yet!</h3>
    <% else %>
      <h3>You have <%= @favourites.count %> Favourite(s)</h3>
    <% end %>
  </div>
</div>



    <div data-controller="sortable" data-sortable-animation-value="150" id="results-fav">
      <% @favourites.each do |favourite| %>
      <div class ="job-profile-card d-flex justify-content-between m-2 row">
      <div class="job-profile-fav d-flex justify-content-between p-2">
      <div class="d-flex">
        <h3><%= favourite.job.title %></h3>

        </div>
          <div>

          <div class="btn-group btn-group-sm" style="align-items:center;" role="group" aria-label="Tools for favourites">

        <%= link_to "View", job_path(favourite.job), class: 'btn btn-primary'  %>
         <%= button_to "❌", favourite_path(favourite), method: :delete, class: 'btn btn-asdfoutline-light' %>
</div>
          </div>
        </div>
        </div>
      <% end %>

    </div>

  </div>

</div>
