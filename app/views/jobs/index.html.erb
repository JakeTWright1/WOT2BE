<%= render partial: "layouts/logo" %>

<div class="results-container">
  <% if @results.empty? %>
    <div class="results-head">
      <h3 style="color: white">No results found for: <%= params[:query] %></h3>
      <h3 style="color: white">Listing all jobs</h3>
    </div>
    <div class="row">
    <% @jobs.each do |job| %>
      <div class="col-md-6 col-sm-12">
        <div class="card mb-4">
          <div class="card-body">
            <!-- Video still image using cl_image_tag -->
            <%= cl_image_tag("#{job.video.key}.jpg", :resource_type => "video", :class => "w-100") %>
            <p class="mt-3"><%= job.title %></p>
            <div class="d-flex flex-column justify-content-center text-center">
              <%= link_to job_path(job), class: "p-2" do %>
              <button type="button" class="btn btn-outline-secondary p-2">View</button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% else %>
    <div class="results-head">
      <h3 style="color: white">Showing results for: <%= params[:query] %></h3>
    </div>
  <div class="row">
    <% @results.each do |result| %>
      <div class="col-md-6 col-sm-12">
        <div class="card mb-4">
          <div class="card-body">
            <!-- Video still image using cl_image_tag -->
            <%= cl_image_tag("#{result.video.key}.jpg", :resource_type => "video", :class => "w-100") %>
            <p class="mt-3"><%= result.title %></p>
            <div class="d-flex flex-column justify-content-center text-center">
              <%= link_to job_path(result), class: "p-2" do %>
              <button type="button" class="btn btn-outline-secondary p-2">View</button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% end %>
</div>
