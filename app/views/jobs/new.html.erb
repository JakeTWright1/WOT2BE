
<div class= "container">

  <%= simple_form_for @job do |f| %>
  <%= f.input :title %>
  <%= f.input :average_salary %>
  <%= f.input :duties %>
  <%= f.input :best_bits %>
  <%= f.input :worst_bits %>
  <%= f.input :qualifications %>
  <%= f.association :tags %>
  <%= f.input :video, as: :file %>
  <%= f.hidden_field :user_id, :value=> "#{current_user.id}" %>
    <p class="text-center"><%= f.submit%></p>
  <% end %>

</div>
