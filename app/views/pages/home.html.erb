<div class="container">

  <div class="inner">
    <h1 class="app-logo">Wot2Be</h1>
  </div>


    <div class="video-show outer">
      <% @jobs.each do |job| %>

        <%= cl_video_tag(job.video.key, controls: true,
        :width => 390,
        :height => 844,
        :crop => "fill") %>

  <div style="z-index:1;">





  <% if current_user && !current_user.favourites.exists?(job_id: job.id) %>
            <%= link_to user_favourites_path(current_user, job_id: job.id), data: { turbo: true, turbo_method: :post } do %>
              <i class="far fa-heart favourite-icon"></i>
            <% end %>
          <% else %>
            <%= link_to user_favourites_path(current_user, job_id: job.id), data: { turbo: true, turbo_method: :post } do %>
              <i class="fas fa-heart favourite-icon"></i>
            <% end %>
          <% end %>

  </div>

      <% end %>
    </div>


 </div>
