<%= render partial: "layouts/logo" %>

<div>
  <% @jobs.each do |job| %>
  <div class="video-container">
      <video
      id="demo-player"
      autoplay
      muted
      class="cld-video-player video"
      data-cld-public-id="<%= job.video.key %>">
      </video>

      <%= link_to job_path(job), action:'show' do %>
        <i class="fa-solid fa-circle-info info-link"></i>
      <% end %>

      <div class="job-infos">
        <div class="job-user">
          <h5>Uploaded by <%= job.user.username %></h5>
        </div>
        <div class="job-detail-thumb">
          <p><%= job.title %></p>
        </div>
      </div>
</div>
  <% end %>
</div>

<script>
var demoplayer = cloudinary.videoPlayer('demo-player', { cloud_name: "dnn2gysbs",
 loop: true,} )
</script>
